
<h3 >{{viewTitle}}</h3>
<form action="/products" autocomplete="off" method="POST"> 
<div class="form-group col-md-12">
        <div class="col-md-6 ">
                <div class="form-group">
                <label class="col-md-3">Product Id</label>
                <input type="text" class="form-control col-md-9" name="productid" placeholder="ProductId" >
                </div>
                <div class="form-group">
                <label class="col-md-3">Product Name</label>
                <input type="text" class="form-control col-md-9" name="productname" placeholder="ProductName" >
                </div>
        
        <div class="col-md-6 ">
                <div class="form-group">
                <label class="col-md-3">Product Phone</label>
                <input type="text" class="form-control col-md-9" name="productphone" placeholder="Product Phone" >
                </div>
                <div class="form-group">
                <label class="col-md-3">Product Email</label>
                <input type="text" class="form-control col-md-9" name="productemail" placeholder="Product Email" >
                </div>

        </div>
</div>
<div class="form-group  col-md-12" >
<button type="submit" class="btn btn-info col-md-6" value="Add" name="add">Add</button>
<button type="submit" class="btn btn-info col-md-6" value="Refresh" name="refresh">Refresh</button>
</div>
</form>